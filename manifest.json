{
  "manifest_version": 2,
  "name": "FrequencyBot",
  "version": "0.0.1",
  "description": "Create MIDI files with random notes from a chosen scale.",
  "permissions": [
    "storage"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "24": "icons/icon24.png",
    "32": "icons/icon32.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png",
    "256": "icons/icon256.png"
  },
  "options_page": "src/html/page_action.html",
  "page_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "24": "icons/icon24.png",
      "32": "icons/icon32.png",
      "64": "icons/icon64.png",
      "128": "icons/icon128.png",
      "256": "icons/icon256.png"
    },
    "default_title": "FrequencyBot"
  },
  "background": {
    "scripts": [
      "src/js/background.js"
    ]
  },
  "content_scripts": [{
    "js": [
      "src/js/content.js"
    ],
    "matches": [
      "<all_urls>"
    ],
    "run_at": "document_end"
  }],
  "web_accessible_resources": [
    "src/html/*.html",
    "src/css/*.css",
    "src/js/*.js"
  ]
}